        <%- include("partials/header.ejs") %>

        <div class="container d-flex justify-content-center align-items-center vh-100">
            <div class="card shadow-lg border-0 p-4" style="max-width: 500px; width: 100%;">
                <div class="card-body">
                    <h2 class="text-uppercase text-center mb-4">Edit Book</h2>
                    <form action="/<%= user.role === "admin" ? "edit" : "editBookUser" %>/<%= data.book_id %>" method="POST">
                        <input type="hidden" name="book_id" value="<%= data.book_id %>" />
                        <input type="hidden" value="<%= user.role %>" />
        
                        <div class="form-floating mb-3">
                            <input type="text" class="form-control" id="modBookName" name="book_name" value="<%= data.book_name %>" required />
                            <label for="modBookName">Book Name</label>
                        </div>
        
                        <div class="form-floating mb-3">
                            <input type="date" class="form-control" id="modDateReceived" name="date_received" value="<%= data.date_received %>" required />
                            <label for="modDateReceived">Date Received</label>
                        </div>
        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input type="number" class="form-control" id="modGood" name="good" value="<%= data.good %>" oninput="calculateBooksModal()" required />
                                    <label for="modGood">Good</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input type="number" class="form-control" id="modDamage" name="damage" value="<%= data.damage %>" oninput="calculateBooksModal()" required />
                                    <label for="modDamage">Damage</label>
                                </div>
                            </div>
                        </div>
        
                        <div class="form-floating mb-4">
                            <input type="number" class="form-control" id="modTotal" name="total" value="<%= data.total %>" readonly />
                            <label for="modTotal">Total</label>
                        </div>
        
                        <div class="d-flex justify-content-between">
                            <a href="/dashboard" class="btn btn-outline-secondary">Back</a>
                            <button type="submit" class="btn btn-primary">Save changes</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        
        <%- include("partials/footer.ejs") %>